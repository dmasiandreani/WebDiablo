<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebDiabloMvc</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/styles.css">
</head>
<body>
    <header>
        <nav class="main_menu">
            <div class="menu__contain">
                @* <div>
                    <a class="nav__link-Img" asp-area="" asp-controller="Home" asp-action="Index">
                        <img class="nav__Img" alt="logoDiablo" src="~/img/diabloLogo.png" id="logo">
                    </a>
                </div> *@
                <div>
                    <ul class="nav__list">
                        <li class="nav__item"><a class="nav__link" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a></li>
                        <li class="nav__item"><a class="nav__link" asp-area="" asp-controller="Personaje" asp-action="Index">Personajes</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <br><br>
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - WebDiabloMvc - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
